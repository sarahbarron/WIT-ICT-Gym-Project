<div class="ui 16 column middle aligned grid raised segment ">
    <div class="row">
        <div class="column four wide center aligned">
            <i class="huge user icon"></i>
        </div>
        <div class="column four wide center aligned">
            {{#if isIdealBodyWeight}}
                <i class="huge green tachometer alternate icon"></i>
            {{else}}
                <i class="huge red tachometer alternate icon"></i>
            {{/if}}
        </div>
        <div class="column two wide right aligned">
            <i class="huge heartbeat icon"></i>
        </div>
        <div class="column two wide left aligned">
            <h3 class="bmi">{{bmi}}</h3>
        </div>
        <div class="column four wide center aligned">
            {{#if bmiCategoryColor}}
                <i class="huge green user md icon"></i>
            {{else}}
                <i class="huge red user md icon"></i>
            {{/if}}
        </div>
    </div>
    <div class="row">
        <div class="column four wide center aligned">
            <h3 class="ui header">{{firstName}} {{lastName}}</h3>
        </div>
        <div class="column four wide center aligned">
            <h3 class="ui header">IDEAL WEIGHT INDICATOR</h3>
        </div>
        <div class="column two wide right aligned"></div>
        <div class="column two wide left aligned">
            <h3 class="ui header">BMI</h3>
        </div>
        <div class="column four wide center aligned">
            <h3 class="ui header">{{bmiCategory}}</h3>
        </div>
    </div>
</div>