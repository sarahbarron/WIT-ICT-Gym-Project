{{!-- Sign up web page, includes a form for a new member to sign up. The new member must input
their first name, last name, email address, password, gender, height and weight --}}
{{> welcomemenu id="signup"}}
{{!-- signup form --}}
<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>
  <div class="two fields">
    {{!-- first name --}}
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text" name="firstName" required>
    </div>
    {{!-- last name --}}
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text" name="lastName" required>
    </div>
  </div>
  {{!-- email --}}
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="email" name="email" required>
  </div>
  {{!-- password --}}
  <div class="field">
    <label>Password</label>
    <input type="password" name="password" required>
  </div>
  {{!-- address --}}
  <div class="field">
    <label>Address</label>
    <input type="text" name="address">
  </div>
  {{!-- gender --}}
  <div class="field">
    <label>Gender</label>
    <input type="radio" name="gender" value="male" checked>Male
    <input type="radio" name="gender" value="female"> Female
  </div>
  <div class="two fields">
    {{!-- height --}}
    <div class="field">
      <label>Height</label>
      <input type="number" step="0.01" min="0" name="height" required>
    </div>
    {{!-- start weight --}}
    <div class="field">
      <label>Starting Weight</label>
      <input type="number" step="0.01" min="0" name="startweight" required>
    </div>
    {{!-- submit button  --}}
    <button class="ui blue submit button">Submit</button>
</form>