{{> trainermenu id="profile"}}
<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <form class="ui stacked segment form" action="/update-trainers-profile" method="POST">
            <h3 class="ui header">Update Profile</h3>
            <div class="two fields">
                <div class="field">
                    <label>First Name</label>
                    <input placeholder={{trainer.firstName}} type="text" name="firstName">
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <input placeholder={{trainer.lastName}} type="text" name="lastName">
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder={{trainer.email}} type="text" name="email">
            </div>
            <div class="field">
                <label>Password</label>
                <input placeholder="..........." type="password" name="password">
            </div>
            <div class="field">
                <label>Gender</label>
                {{#if male}}
                    <input type="radio" name="gender" value="male" checked>Male
                    <input type="radio" name="gender" value="female"> Female
                {{else}}
                    <input type="radio" name="gender" value="male">Male
                    <input type="radio" name="gender" value="female" checked> Female
                {{/if}}
            </div>
            <button class="ui blue submit button">Submit</button>
        </form>
    </div>
    <div class="column">
        <img src="images/sport_icons.jpg" alt="sports icon for BMI tracker" class="ui image">
    </div>
</div>